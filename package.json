{
  "name": "gh-desk",
  "displayName": "GitHub Desktop for VS Code",
  "description": "A Visual Studio Code extension that provides a GitHub Desktop-like Git interface within the editor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "onCommand:gh-desk.showGitView"
  ],
  "main": "./out/extension.js",
   "contributes": {
     "commands": [
       {
         "command": "gh-desk.showGitView",
         "title": "Show Git View",
         "category": "GitHub Desktop"
       },
       {
         "command": "gh-desk.openBranchDialog",
         "title": "Open Branch Dialog",
         "category": "GitHub Desktop"
       },
       {
         "command": "gh-desk.focusCommitMessage",
         "title": "Focus Commit Message",
         "category": "GitHub Desktop"
       },
       {
         "command": "gh-desk.pullOrPush",
         "title": "Pull or Push",
         "category": "GitHub Desktop"
       },
       {
         "command": "gh-desk.openPullRequest",
         "title": "Open Pull Request",
         "category": "GitHub Desktop"
       }
     ],
     "configuration": {
       "title": "GitHub Desktop for VS Code",
       "properties": {
         "gh-desk.githubToken": {
           "type": "string",
           "default": "",
           "description": "GitHub Personal Access Token for fetching pull requests. Create one at https://github.com/settings/tokens with 'repo' scope."
         }
       }
     },
    "keybindings": [
      {
        "command": "gh-desk.openBranchDialog",
        "key": "ctrl+b",
        "mac": "cmd+b",
        "when": "gh-desk.active"
      },
      {
        "command": "gh-desk.focusCommitMessage",
        "key": "ctrl+c",
        "mac": "cmd+c",
        "when": "gh-desk.active"
      },
      {
        "command": "gh-desk.pullOrPush",
        "key": "ctrl+p",
        "mac": "cmd+p",
        "when": "gh-desk.active"
      },
      {
        "command": "gh-desk.openPullRequest",
        "key": "ctrl+r",
        "mac": "cmd+r",
        "when": "gh-desk.active"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "vite build && tsc -p ./",
    "build:webview": "vite build",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.8",
    "@types/vscode": "^1.74.0",
    "@vitejs/plugin-react": "^4.0.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "packageManager": "pnpm@9.12.1+sha512.e5a7e52a4183a02d5931057f7a0dbff9d5e9ce3161e33fa68ae392125b79282a8a8a470a51dfc8a0ed86221442eb2fb57019b0990ed24fab519bf0e1bc5ccfc4"
}
